<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ff0"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"  
    android:layout_height="match_parent" >

    <com.peng.saishi.widget.dropdownmenu.DropDownMenu
        android:id="@+id/frag2_dropDownMenu1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:background="#F0F0F0"
        android:layout_alignParentTop="true"
        >
    </com.peng.saishi.widget.dropdownmenu.DropDownMenu>

    <com.peng.saishi.widget.pulltorefesh.PullToRefreshListView
        android:id="@+id/frag2_listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:divider="#d1d1d1"
        android:dividerHeight="1px"
        android:scrollbars="@null"
        android:layout_below="@+id/frag2_dropDownMenu1"
        android:background="#faf9f9"
       ptr:ptrAnimationStyle="flip"
       ptr:ptrMode ="both"
       ptr:ptrHeaderTextColor="#000"
        >
    </com.peng.saishi.widget.pulltorefesh.PullToRefreshListView>

</RelativeLayout>