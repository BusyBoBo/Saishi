<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/menupop_imageView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/triangle" />

    <RelativeLayout
        android:id="@+id/menupop_listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:layout_below="@id/menupop_imageView1"
        android:background="@drawable/menu_bg" >

        <TextView
            android:id="@+id/menu_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/lv_bg2"
            android:drawableLeft="@drawable/add_group"
            android:drawablePadding="5dp"
                android:layout_alignRight="@+id/menu_textView3"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="新组队"
            android:textSize="@dimen/middle_text" />

        <TextView
            android:id="@+id/menu_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/menu_textView1"
            android:background="@drawable/lv_bg2"
            android:drawableLeft="@drawable/qr_code"
            android:layout_alignRight="@+id/menu_textView3"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="扫一扫"
            android:textSize="@dimen/middle_text" />

        <TextView
            android:id="@+id/menu_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_textView2"
            android:background="@drawable/lv_bg2"
            android:drawableLeft="@drawable/feedback"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="反馈与帮助"
            android:textSize="@dimen/middle_text" />

        <TextView
            android:id="@+id/menu_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/menu_textView3"
            android:background="@drawable/lv_bg2"
            android:drawableLeft="@drawable/share"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="分享给好友"
            android:textSize="@dimen/middle_text" />
    </RelativeLayout>

</RelativeLayout>