<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eaeaea"
    
    android:layout_height="match_parent" >

<RelativeLayout
        android:id="@+id/publish_Top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border_main_top" >
        <TextView
            android:id="@+id/publish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评价"
            android:textColor="@color/WHite"
            android:textSize="@dimen/big_text" />

        <include
            layout="@layout/view_back" />

        <Button
            android:id="@+id/publish_Btn"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@drawable/enable_color"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:text="发表"
            android:textSize="@dimen/middle_text" />

    </RelativeLayout>

<EditText
    android:id="@+id/publish_editText1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:minHeight="100dp"
    android:layout_alignParentLeft="true"
    android:hint="请输入你的评价....."
    android:gravity="left|top"
    android:textColor="#878686"
    android:textSize="@dimen/normal_text"
    android:background="@drawable/reg_et_bg"
    android:layout_below="@+id/publish_Top"
    android:ems="10" >

    <requestFocus />
</EditText>

</RelativeLayout>