<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_bg"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="100"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/loading1"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarAutoRotateInterval="2500"
        fresco:progressBarImage="@drawable/loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:retryImage="@drawable/userlittle"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundedCornerRadius="5dp" />

    <TextView
        android:id="@+id/Seeperson_xueli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/goal"
        android:gravity="center"
        android:singleLine="true"
        android:text="对应比赛名字"
        android:textColor="#59c8CC"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="2016-5-21"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/Small_Text" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="比赛组名"
        android:textColor="#000"
        android:textSize="@dimen/normal_text" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/forward" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:drawableLeft="@drawable/group"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="3/8"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/Small_Text" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Seeperson_xueli"
        android:layout_below="@+id/Seeperson_xueli"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="分类:"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/normal_text" />

</RelativeLayout>