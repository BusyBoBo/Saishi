<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp" >

    <TextView
        android:id="@+id/code_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Codeshow_codeimage"
        android:layout_alignTop="@+id/codeshow_image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/codeshow_image"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="@dimen/middle_text" />

    <TextView
        android:id="@+id/code_show_desci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/codeshow_image"
        android:layout_alignLeft="@+id/code_show_name"
        android:layout_alignRight="@+id/Codeshow_codeimage"
        android:drawableLeft="@drawable/group"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:text="3/8"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/Small_Text" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/Codeshow_codeimage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/code_show_desci"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="100"
        fresco:placeholderImage="@drawable/loading2"
        fresco:placeholderImageScaleType="centerCrop" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/codeshow_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Codeshow_codeimage"
        android:layout_alignParentTop="true"
        android:gravity="center"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="100"
        fresco:placeholderImage="@drawable/loadinguser"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Codeshow_codeimage"
        android:layout_alignRight="@+id/Codeshow_codeimage"
        android:layout_below="@+id/Codeshow_codeimage"
        android:layout_marginTop="23dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="扫一扫上面的二维码,可以直接加入到对应的群,不需验证!"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/Small_Text" />

</RelativeLayout>